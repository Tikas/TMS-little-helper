	var gamesDir      = ..configTks.gamePath ++ '\\';
	//繁体：澳5124、台1028、港3076，这个 if 可以优化写法吗？
	if( localeID == 5124 or localeID == 1028 or localeID == 3076 ){
		..raw.execute(gamesEXE,serverAddress ++ " " ++ id ++ " " ++ key,,,gamesDir,0);
